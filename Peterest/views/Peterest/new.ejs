<% layout('layout/Boilerplate.ejs')%>
    <h1>New Post</h1>
    <form action="/posts" method="POST" id="postForm" novalidate>
        <label class="form-label" for="title">Title: </label>
        <input class="form-control" type="text" name="title" id="title" required>
        <label class="form-label" for="body">Body: </label>
        <textarea class="form-control" type="text" name="body" id="body" required></textarea>
        <label for="image" class="form-label">Image URL:</label>
        <input type="text" class="form-control" name="image" id="image">

    </form>
    <div class="d-flex">
        <button class="btn btn-success mt-2 col-1" form="postForm">Submit</button>
        <a href="/posts" class="btn btn-danger mt-2 col-1 offset-10">Cancel</a>
    </div>