<% layout('/layout/Boilerplate.ejs')%>
    <form action="/users/register" method="POST" id="postForm" novalidate>
        <label class="form-label" for="email">Email: </label>
        <input class="form-control" type="text" name="user[email]" id="email" required>

        <label class="form-label" for="username">Username: </label>
        <input class="form-control" type="text" name="user[username]" id="username" required>

        <label class="form-label" for="password">Password: </label>
        <input class="form-control" type="password" name="user[password]" id="password" required>

        <button class="btn btn-success mt-3">Register</button>
    </form>